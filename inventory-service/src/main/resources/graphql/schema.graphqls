type Query{
    productList : [Product],
    productById(id:String) : Product
}

type Mutation{
    saveProduct(product:ProductRequest) : Product
}

input ProductRequest{
    name : String,
    price : Float,
    quantity : Int
}

type Product{
    id : String,
    name : String,
    price : Float,
    quantity : Int
    category : Category
}

type Category {
    id : Float,
    name : String,
    products : [Product]
}
